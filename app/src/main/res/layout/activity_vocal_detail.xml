<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            tools:context=".VocalDetailActivity">

            <TextView
                android:id="@+id/vocaltitledetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/custombottomborder"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="#302f2f"
                android:textSize="22dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/vocalImageDetail"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="4dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Prounciation"
                    android:textColor="#303030"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/speakerbtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="#ffffff"
                    android:scaleType="fitXY"
                    android:src="@drawable/speaker1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Meaning"
                    android:textColor="#303030"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailanswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="0dp"
                    android:textColor="#6e6e6e"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:paddingLeft="10dp"
                    android:text="Example"
                    android:textColor="#303030"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailadditional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:paddingTop="0dp"
                    android:textColor="#6e6e6e"
                    android:textSize="16dp" />
            </LinearLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:id="@+id/readmorebtn"
                android:visibility="gone"
                android:background="@drawable/btncustomxaml"
                android:text="Learn More Words"
                android:textColor="#ffffff" />

        </LinearLayout>
    </ScrollView>
