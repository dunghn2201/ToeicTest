<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="fragment.ConverFragmentTab">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_conversation_frag"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read and Listen Conversations in different situations"
            android:paddingLeft="10dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#d84315"
            android:fontFamily="sans-serif-condensed"
            />

    </LinearLayout>



    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/optionsp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#eae7e7"
        android:layout_marginTop="20dp"
        >
    </androidx.appcompat.widget.AppCompatSpinner>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btncustomxaml"
        android:text="Show Conversation"
        android:id="@+id/startchatbtn"
        android:textColor="#ffffff" />



</LinearLayout>
